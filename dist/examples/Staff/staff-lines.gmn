% Now, all kinds of bars (simple bar, double bar, repeat bars, finish bar)
% adapt themselves to the staff and its attributes.
%
{
    [
        \staffFormat<"7-lines", size=1.5pt, lineThickness=0.4> e \repeatBegin a \doubleBar  g \repeatEnd f
    ],
    [
        \staffFormat<"3-lines", lineThickness=0.04> {a,b} \repeatBegin c  f2 \repeatEnd
    ]
}