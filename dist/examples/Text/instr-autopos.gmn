(*
	the \instr tag supports font attributes
	and auto position at tag or \auto (or \set) level
*)
{
[
	\accol<id=1, range="1-2", type="none">	
	\auto<autoInstrPos="on">
	\instr<"Flute", font="Courier", fattrib="bi"> a b d
]
,
[
	\auto<autoInstrPos="off">
	\instr<"Violin I", dy=-5, dx=-1.7cm, color="grey"> d a b
]
,
[
	\instr<"Violin II", autopos="on", fsize=12pt> b d a
]
}