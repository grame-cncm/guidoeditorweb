% \acc tag
% can be used to force display of accidentals
% and also to set the position of an accidental

[  \set<autoEndBar="off">
  	\key<"G"> \meter<"2/4"> 

   \text<"\acc-Tag used to set position of accidentals",dy=-8hs,dx=-2cm>
   (\acc<dy=-2hs,dx=-1hs>( c# )) \space<1cm> 
   \acc<dx=-1hs>(d&) % set accidental position, including th y-pos!!
   \acc( f# )   	% force a sharp
   \acc( c2 ) 	% force a natural sign
  ]
