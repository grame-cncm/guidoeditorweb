%
% \accel-tag indicates an accelerando (acceleration of a musical part)
% \rit-tag indicates a ritatrdando (deceleration of a musical part)
%
{
    [
        \rit (e g b f a) g
        \accel<before="[1/4]=60", textformat="lc", after="[1/4]=80", font="Courier">
        ( e d e2 a2 f1 a )
    ],
    [
        \rit<after="[1/4]=60", textformat="cc", color="blue", fsize=12pt, dx2=-3> ( e c b f a )
        c2  \accel<fattrib="bi"> ( e1/4 d e c d f )
    ]
}