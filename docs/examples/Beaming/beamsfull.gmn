%
% illustrate the various automatic beaming options
%
[
	\meter<"4/4"> 
	\beamsFull    % automatic beaming even when a rest is inside
	f/8 _/16 a e/4 
	\beamsAuto    % simple auto beaming broken by the rest
	f/8 _/16 a e/4 
	\b(f/8 _/16 a) e/4
	f/8 g/16 a
	\beamsOff     % no auto beaming
	f/8 g/16 a
]
